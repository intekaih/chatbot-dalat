modules = ["nodejs-20"]
[agent]
expertMode = true
integrations = ["javascript_openai_ai_integrations:2.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Ionic Dev Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AI Chat Server"

[[workflows.workflow]]
name = "Ionic Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ionic-app && npm start"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "AI Chat Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && npm start"
waitForPort = 3001

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[nix]
channel = "stable-25_05"
